@model IEnumerable<ToyStore.Models.Toys>
 @{
    Layout = null;
}
<h2>Список товаров</h2>
<table class="table">
    @foreach (var toy in Model)
    {
        <tr>
            <td>@toy.toy_name</td>
            <td>@toy.description</td>
            <td>@toy.price</td>
            <td>@toy.category.category_name</td>
            <td>
                <form asp-action="Delete" asp-route-id="@toy.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
            <td>
                   <form asp-action="Edit" asp-route-id="@toy.Id" method="get">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Релактировать
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<a asp-action="Create">Добавить товар</a>
